#include<bits/stdc++.h>
using namespace std;

class item{
 public :
          float value;
          float weight;
};
bool cmp(item val1 , item val2){
    if(val1.value/val1.weight>val2.value/val2.weight){
        return true;
    }
    return false;
}
float maxprofit(item arr[],int n,float w){
    float profit=0;
 for(int i=0;i<n;i++){
    if(arr[i].weight<=w){
        profit=profit+arr[i].value;
        w=w-arr[i].weight;
    }
    else{
        profit=profit+(arr[i].value/arr[i].weight)*w;
       w=0; 
    }
     
 }
 return profit;
}
int main(){
    int n;
    cout<<"enter number of items";
    cin>>n;
item arr[n] ;
for(int i=0;i<n;i++){
    cout<<i;
    cin>>arr[i].value;
    cin>>arr[i].weight;
}
sort(arr,arr+n,cmp);
float w;
cout<<"enter weight";
cin>>w;
 float m=maxprofit(arr,n,w);
 cout<<m;
    return 0;
}
