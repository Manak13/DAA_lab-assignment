#include <iostream>
using namespace std;

int main()
{
    unsigned long long n, h, w;
    cin >> n >> h >> w;   

    unsigned long long low = 1;
    unsigned long long high = 1000000000000000000ULL;
    unsigned long long answer = 0;

    while (low <= high)
    {
        unsigned long long mid = (low + high) / 2;

        unsigned long long fit_in_width = mid / w;
        unsigned long long fit_in_height = mid / h;

        if (fit_in_width * fit_in_height >= n)
        {
            answer = mid;      
            high = mid - 1;    
        }
        else
        {
            low = mid + 1;     
        }
    }

    cout << answer << endl;

    return 0;
}
